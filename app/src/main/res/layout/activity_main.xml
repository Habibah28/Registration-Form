<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="thescone.chainspiritform.MainActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Registration"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/vendorName"
        android:layout_marginTop="57dp"
        android:maxLength="50"
        android:hint="Name"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/vendorIC"
        android:layout_below="@+id/vendorName"
        android:layout_centerHorizontal="true"
        android:maxLength="14"
        android:hint="IC Number" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/vendorAddress"
        android:layout_below="@+id/vendorIC"
        android:layout_centerHorizontal="true"
        android:maxLength="100"
        android:hint="Address" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/vendorMobile"
        android:layout_below="@+id/vendorAddress"
        android:layout_centerHorizontal="true"
        android:maxLength="10"
        android:hint="Mobile No." />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/vendorEmail"
        android:layout_below="@+id/vendorMobile"
        android:layout_centerHorizontal="true"
        android:maxLength="50"
        android:hint="Email" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vendorEmail"
        android:layout_alignRight="@+id/vendorEmail"
        android:layout_alignEnd="@+id/vendorEmail"
        android:layout_alignLeft="@+id/vendorEmail"
        android:layout_alignStart="@+id/vendorEmail"
        android:id="@+id/vendorSignInPlatform"
        android:maxLength="50"
        android:hint="Sign In Platform" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vendorSignInPlatform">

        <Button
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/register_btn"
            android:layout_alignParentBottom="true"
            />

        <com.facebook.login.widget.LoginButton
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Sign In with Facebook"
            android:id="@+id/fbSignIn_btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
